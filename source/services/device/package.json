{
    "name": "iot-sim-device-service",
    "description": "The device microservice for the iot device simulator",
    "main": "index.js",
    "license": "Amazon Software License (ASL)",
    "version": "0.0.1",
    "private": "true",
    "dependencies": {
        "moment": "*",
        "randomstring": "*",
        "underscore": "*",
        "shortid": "*",
        "authorizer": "file:../../resources/authorizer/",
        "logger": "file:../../resources/logger/"
    },
    "devDependencies": {
        "aws-sdk": "*",
        "chai": "*",
        "sinon": "*",
        "sinon-chai": "*",
        "mocha": "*",
        "aws-sdk-mock": "*",
        "proxyquire": "*"
    },
    "scripts": {
        "pretest": "npm install",
        "test": "env DEVICE_TYPES_TBL='dt-table' DEVICES_TBL='d-table' SIMULATOR_QUEUE='smpl-queue' mocha lib/*.spec.js",
        "prestart": "npm install",
        "start": "node index.js",
        "build:init": "rm -rf dist && rm -rf node_modules",
        "build:zip": "zip -rq iot-sim-device-service.zip . -x template.yml",
        "build:dist": "mkdir dist && mv iot-sim-device-service.zip dist/",
        "build": "npm run build:init && npm install --production && npm run build:zip && npm run build:dist",
        "local:api": "sam local start-api --env-vars ../tests/env-vars.json"
    },
    "bundledDependencies": [
        "aws-sdk",
        "moment",
        "underscore"
    ]
}
